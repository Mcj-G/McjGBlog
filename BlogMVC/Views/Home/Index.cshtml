@model IEnumerable<BlogMVC.Models.DisplayModels.PostDisplayModel>
@{
    ViewData["Title"] = "McjG Blog - Main Page";
}

<h1 class="display-1">Posts:</h1>
@foreach (var post in Model)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(post => post.AuthorName)
                </th>
                <th>
                    @Html.DisplayNameFor(post => post.CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(post => post.CategoryName)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => post.AuthorName)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => post.CreatedDate)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => post.CategoryName)
                </th>
            </tr>
        </tbody>
    </table>
    <h1>@Html.DisplayFor(modelItem => post.Title)</h1>
    <p class="text-justify">@Html.DisplayFor(modelItem => post.Content)</p>
    @Html.ActionLink("View post", "ViewPost", "Post", new { postId = post.Id })
    <span class="d-block p-2 bg-primary text-white mb-5"></span>
}