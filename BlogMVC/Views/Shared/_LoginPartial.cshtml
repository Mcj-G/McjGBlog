@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav align-items-baseline">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="text-dark align-text-bottom" style="font-size: 20px">Hello!</a>
    </li>
    <li class="nav-item" >
        <form  class="form-inline align-text-bottom" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark" style="font-size: 20px">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" style="font-size: 20px" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" style="font-size: 20px" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
